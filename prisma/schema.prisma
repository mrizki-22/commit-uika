// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Anggota {
  id Int @id @default(autoincrement())
  nama String
  fakultas String
  prodi String
  no_telp String
  email String
  alamat String
  angkatan String
  status String
}

model Kategori {
  id Int @id @default(autoincrement())
  nama String
  slug String
  Artikel Artikel[]
}

model Artikel {
  id Int @id @default(autoincrement())
  judul String
  slug String @unique
  penulis String?
  konten String?
  cover_img String?
  kategori_id Int
  kategori Kategori @relation(fields: [kategori_id], references: [id])
  is_published Boolean @default(false)
  published_at DateTime?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}